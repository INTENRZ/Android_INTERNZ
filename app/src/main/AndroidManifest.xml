<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.internz"
    android:installLocation="preferExternal">
    <!-- 권한 설정 -->
    <!-- 서버 통신용 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- SetProfileActivity -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".ui.story.DetailStoryActivity"/>
        <activity android:name=".ui.profile.main.OtherProfileActivity" />
        <activity android:name=".ui.profile.TimelineAddActivity" />
        <activity android:name=".feature.setprofile.SetProfileActivity" />
        <activity android:name=".feature.comment.CommentActivity" />
        <activity android:name=".feature.jobselect.JobSelectActivity" />
        <activity android:name=".feature.signup.SignUp2Activity" />
        <activity
            android:name=".feature.signin.SignInActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".feature.signup.SignUpActivity" />
        <activity android:name=".ui.BottomBarActivity"/>
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>