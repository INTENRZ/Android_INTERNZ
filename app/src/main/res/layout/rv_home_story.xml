<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtHomeStoryDesc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="영화번역가는 AI때문에 사라질 직업인가"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="#212529"
        />

    <ImageView
        android:id="@+id/imgHomeStoryImg"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:src="@drawable/home_recomm_story_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtHomeStoryDesc"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_shape"
        app:layout_constraintTop_toBottomOf="@id/imgHomeStoryImg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>