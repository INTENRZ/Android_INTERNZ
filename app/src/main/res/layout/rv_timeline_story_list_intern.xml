<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/txtTimelineStoryListInternTitle"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="영화번역가는 AI때문에 사라질 직업인가."
        android:textSize="15sp"
        android:textColor="#212529"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"/>

    <TextView
        android:id="@+id/txtTimelineStoryListInternDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="12.13"
        android:textColor="#212529"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTimelineStoryListInternTitle" />

    <ImageView
        android:id="@+id/imgTimelineStoryListInternImg"
        android:layout_width="110dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/home_recomm_story3_img" />

    <View
        android:id="@+id/bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#e3e3e3"/>


</androidx.constraintlayout.widget.ConstraintLayout>