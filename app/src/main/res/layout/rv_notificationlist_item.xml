<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:contentView="@+id/content"
    app:rightMenuView="@+id/right">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtNotilistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="에이피알"
            android:textColor="#212529"
            android:textSize="16sp"
            android:fontFamily="@font/notosanscjkkrbold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNotilistDesc"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="마케팅 콘텐츠 디자인"
            android:textSize="16sp"
            android:fontFamily="@font/notosanscjkkrregular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNotilistTitle" />

        <TextView
            android:id="@+id/txtNotilistDday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            android:text="D-13"
            android:textColor="@color/colorDday"
            android:textSize="14sp"
            android:fontFamily="@font/notosanscjkkrbold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNotilistDesc" />

        <ImageView
            android:id="@+id/imgNotilistImg"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/rectangle_line"
            android:backgroundTint="#e3e3e3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rightTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:text="추가"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/notosanscjkkrmedium"/>
    </LinearLayout>




</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>



