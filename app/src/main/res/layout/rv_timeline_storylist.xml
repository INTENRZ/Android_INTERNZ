<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/txtTimelineStoryListDesc"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="영화번역가는 AI때문에 사라질 직업인가."
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/txtTimelineStoryListdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTimelineStoryListDesc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:text="D-13"
        android:textSize="14sp"
        android:textColor="@color/colorDday"/>

    <ImageView
        android:id="@+id/imgTimelineStoryListImg"
        android:layout_width="110dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtTimelineStoryListDesc"
        android:layout_marginStart="30dp"
        android:src="@drawable/home_recomm_story3_img" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTimelineStoryListdate"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>