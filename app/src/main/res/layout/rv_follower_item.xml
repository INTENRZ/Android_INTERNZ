<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imgFollowerUser"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/back_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtFollowerNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한한한"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:textSize="14sp"
        android:textColor="#212529"
        app:layout_constraintStart_toEndOf="@+id/imgFollowerUser"
        app:layout_constraintTop_toTopOf="@id/imgFollowerUser"
        app:layout_constraintBottom_toBottomOf="@id/imgFollowerUser"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/txtFollowerContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text="서비스 기획과 리서치를 좋아하는 UX/UI 디자이너 입니다."
        android:fontFamily="@font/notosanscjkkrregular"
        android:textSize="14sp"
        android:textColor="#212529"
        app:layout_constraintStart_toStartOf ="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFollowerUser" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/rectangle_line"
        app:layout_constraintTop_toBottomOf="@id/txtFollowerContents"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#e3e3e3"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/imgFollowerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/following_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

