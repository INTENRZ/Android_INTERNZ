<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <!-- 하단 탭바  - 홈 버튼 -->
    <ImageView
        android:id="@+id/img_maintab_home"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:src="@drawable/selector_maintab_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 하단 탭바  - 공고 버튼 -->
    <ImageView
        android:id="@+id/img_maintab_notice"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:src="@drawable/selector_maintab_notice"
        app:layout_constraintLeft_toRightOf="@+id/img_maintab_home"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 하단 탭바  - 스토리 버튼 -->
    <ImageView
        android:id="@+id/img_maintab_story"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:src="@drawable/selector_maintab_story"
        app:layout_constraintLeft_toRightOf="@+id/img_maintab_notice"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 하단 탭바  - 프로필 버튼 -->
    <ImageView
        android:id="@+id/img_maintab_profile"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:src="@drawable/selector_maintab_profile"
        app:layout_constraintLeft_toRightOf="@+id/img_maintab_story"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>